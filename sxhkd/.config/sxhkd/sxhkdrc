# Launch terminal (Alacritty)
super + Return
    terminal

# File manager (Yazi)
super + e
    terminal --class FM -e yazi

# Task manager (htop)
ctrl + shift + Escape
    terminal --class FM -e htop

# Close focused window
super + shift + q
    bspc node -c

# Focus window in direction (arrow keys)
super + Left
    bspc node -f west
super + Down
    bspc node -f south
super + Up
    bspc node -f north
super + Right
    bspc node -f east

# Swap (поменять местами с соседним окном)
super + shift + Left
    bspc node -s west
super + shift + Down
    bspc node -s south
super + shift + Up
    bspc node -s north
super + shift + Right
    bspc node -s east

# Move (переместить окно внутрь в заданном направлении)
super + alt + Left
    bspc node -n west
super + alt + Down
    bspc node -n south
super + alt + Up
    bspc node -n north
super + alt + Right
    bspc node -n east

# Switch to desktops 1–9
super + 1
    bspc desktop -f 1
super + 2
    bspc desktop -f 2
super + 3
    bspc desktop -f 3
super + 4
    bspc desktop -f 4
super + 5
    bspc desktop -f 5
super + 6
    bspc desktop -f 6
super + 7
    bspc desktop -f 7
super + 8
    bspc desktop -f 8
super + 9
    bspc desktop -f 9

# Move window to desktop 1–9
super + shift + 1
    bspc node -d 1
super + shift + 2
    bspc node -d 2
super + shift + 3
    bspc node -d 3
super + shift + 4
    bspc node -d 4
super + shift + 5
    bspc node -d 5
super + shift + 6
    bspc node -d 6
super + shift + 7
    bspc node -d 7
super + shift + 8
    bspc node -d 8
super + shift + 9
    bspc node -d 9

# Reload sxhkd config
super + Escape
    pkill -USR1 -x sxhkd

# Quit / restart bspwm
super + alt + q
    bspc quit
super + alt + r
    bspc wm -r

# Power menu (your custom script)
super + p
    power

# Application launcher (rofi)
super + space
    rofi -show drun

# Toggle fullscreen
super + f
    bspc node -t fullscreen

# Toggle floating
super + shift + f
    bspc node -t floating

# Toggle tiling
super + t
    bspc node -t tiled

# Layout switch (monocle/tiling)
super + m
    bspc desktop -l next

# Move floating window (arrows)
super + ctrl + Left
    bspc node -v -20 0
super + ctrl + Down
    bspc node -v 0 20
super + ctrl + Up
    bspc node -v 0 -20
super + ctrl + Right
    bspc node -v 20 0

# Resize windows (Alt + hjkl)
super + alt + h
    bspc node -z left -20 0 || bspc node -z right -20 0
super + alt + j
    bspc node -z bottom 0 20 || bspc node -z top 0 20
super + alt + k
    bspc node -z top 0 -20 || bspc node -z bottom 0 -20
super + alt + l
    bspc node -z right 20 0 || bspc node -z left 20 0

# sound togle
super + l
    toggle-audio.sh

super + shift + s
    snip-to-clipboard.sh

# Volume up
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

# Volume down
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

# Mute
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# Play/Pause
XF86AudioPlay
    playerctl play-pause

# Stop
XF86AudioStop
    playerctl stop

# Next track
XF86AudioNext
    playerctl next

# Previous track
XF86AudioPrev
    playerctl previous
